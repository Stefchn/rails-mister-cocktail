<div class="container">


  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "All cocktails", cocktails_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
 <%= cl_image_tag @cocktail.photo, height: 300, width:400, crop: :fill %>
<ul>

  <li><%= link_to "Add a recipe", new_cocktail_dose_path(@cocktail) %></li>
  <li> <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %> <i class="fa fa-trash destroy_dose"></i>
      <% end %></li>
</ul>


    </div>
  </div>
</div>

