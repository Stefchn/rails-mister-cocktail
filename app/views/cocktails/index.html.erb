<div class="container">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,50,50,0.5) 0%, rgba(0,0,0,0.3) 10%), url('<%= image_path 'hidden-bar.jpg' %>');">
    <div class="banner-content">
      <h1>The Magic Room</h1>
      <p>Trust me, you can dance.</p>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="row">

        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-6 col-md-3">

            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'white-russian.jpg' %>');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
            </div>
              <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>

            </div>
          </div>
          <% end %>
      </div>
    </div>
        <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-success btn-lg" %>
  </div>

