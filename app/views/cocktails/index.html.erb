<div class="container-fluid wrapper">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,50,50,0.5) 0%, rgba(0,0,0,0.3) 10%), url('<%= image_path 'hidden-bar.jpg' %>');">
    <div class="banner-content">
      <h1>The Magic Room</h1>
      <p>Trust me, you can dance.</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-danger btn-sm" %>
    </div>
  </div>


  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-3">

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= cocktail.photo_url.nil? ? "https://www.standard.co.uk/s3fs-public/thumbnails/image/2016/09/30/10/cocktails.jpg" :  cocktail.photo_url %>);">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


